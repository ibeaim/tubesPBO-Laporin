<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.laporin.tubesjava_laporin.HomeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <MenuButton mnemonicParsing="false" style="-fx-background-color: pink;" text="MenuButton">
        <items>
            <MenuItem mnemonicParsing="false" text="Home"/>
            <MenuItem mnemonicParsing="false" text="Exit"/>
        </items>
    </MenuButton>

    <Label fx:id="welcomeText" />
    <Button alignment="CENTER" text="Start New Journey!" />

</VBox>
